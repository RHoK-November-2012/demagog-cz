# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.showQuotes()

# New quote
GET 	/quote/save					controllers.Application.showNewQuoteForm()	
POST	/quote/save					controllers.Application.submitQuote()

# admin
GET		/admin/						controllers.Admin.index()
POST	/admin/login				controllers.Admin.login()

GET     /quotes                     controllers.Application.showQuotes()
POST     /upVote                     controllers.Application.upVote()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
